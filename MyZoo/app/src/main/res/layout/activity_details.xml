<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/capture_scrollView"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:background="@drawable/img_main_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft= "@dimen/main_left_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.zeroone_creative.myzoo.view.activity.DetailsActivity">

        <ImageView
            android:id="@+id/capture_imageview"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_noimage"
            android:background="@drawable/bg_gallery_big" />

        <EditText
            android:id="@+id/capture_edittext_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="text"
            android:maxLines="1"
            android:hint="なまえ"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="#0fff"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/primary_text_light" />

        <EditText
            android:id="@+id/capture_edittext_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:lines="4"
            android:clickable="false"
            android:ellipsize="start"
            android:hint="きづいたことをかいてね"
            android:gravity="left|top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/primary_text_light" />


        <com.andexert.library.RippleView
            android:id="@+id/capture_rippleview_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ripple:rv_type="rectangle"
            ripple:rv_zoom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/capture_textView_sound"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:text="● ろくおんする"
                android:background="@color/primary" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/capture_rippleview_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ripple:rv_type="rectangle"
            ripple:rv_zoom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/capture_textView_capture"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:text="ほかくする"
                android:background="@color/primary" />

        </com.andexert.library.RippleView>

    </LinearLayout>

</ScrollView>

