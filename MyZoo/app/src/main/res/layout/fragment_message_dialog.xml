<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/message_dialog_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/accent_text"
        android:textSize="16dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/message_dialog_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:background="#0fff"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />
        
        <View
            android:id="@+id/message_dialog_view_sepalate"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ccc" />

        <Button
            android:id="@+id/message_dialog_button_confilm"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:background="#0fff"
            android:textColor="@color/primary_text" />
        

    </LinearLayout>

</LinearLayout>
